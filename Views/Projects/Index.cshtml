@model IEnumerable<firstApplication.Models.Projects>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinishProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leader)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartProject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishProject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionProject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leader.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
